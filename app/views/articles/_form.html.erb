<div class="container">

  <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @article %>

    <%= form_with(model: @article, class: "shadow mb-5 bg-info rounded", local: true) do |f| %>

      <div class="my-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
      </div>

      <div class="my-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "Description of article" %>
      </div>

      <div class="my-3">
        <%= f.label :category, class: "form-label" %>
        <%#= f.collection_select :categories_ids, Category.order(:name), :id, :name %>
        <%= f.collection_select :category_ids, Category.all, :id, :name,
                                {prompt: "Make your selection from the list below (can be empty)"},
                                { multiple: true, size: 3, class: "form-select shadow rounded" }
        %>

      </div>

      <div class="mb-3 text-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>

    <% end %>

    <div class="mb-3 text-center">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>

</div>

