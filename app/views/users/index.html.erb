<h1 class="text-center mt-4">Alpha Blogers</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <% @users.each do |user| %>
        <div class="card mt-4 text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            <%= link_to user.username, user, class: "text-decoration-none" %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to 'View profile', user, class: "btn btn-outline-success" %>
            <%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-outline-info" %>
          </div>
          <div class="card-footer text-muted">
            <span>Joined <%= time_ago_in_words(user.created_at) %> ago</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>