<h1 class="text-center mt-4">Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-4 mt-4">
      <% @categories.each do |category| %>
        <div class="card mt-4 text-center shadow mb-5 bg-body rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success text-decoration-none" %></h5>
          </div>
          <div class="card-footer text-muted">
            <span>Created <%= time_ago_in_words(category.created_at) %>
              ago, edited <%= time_ago_in_words(category.updated_at) %> ago</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>