<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">

  <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @category %>

    <%= form_with(model: @category, class: "shadow mb-5 bg-info rounded", local: true) do |f| %>

      <div class="my-3">
        <%= f.label :name, "Category name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
      </div>

      <div class="mb-3 text-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>

    <% end %>

    <div class="mb-3 text-center">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>

</div>

